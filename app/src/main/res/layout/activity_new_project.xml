<?xml version="1.0" encoding="utf-8"?><androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#deecfa"
    tools:context=".NewProjectActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Новый проект"
            android:textSize="34dp"
            android:textColor="@color/black"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите имя"
            android:id="@+id/name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Описание проекта"
            android:id="@+id/description"
            android:inputType="textMultiLine"
            android:maxLines="200"/>

        <com.nex3z.flowlayout.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flChildSpacing="auto"
            app:flChildSpacingForLastRow="align"
            app:flRowSpacing="8dp"
            android:id="@+id/selected_layout"
            app:flMinChildSpacing="6dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:text="Выбранные категории:"
                android:paddingBottom="16dp"/>
        </com.nex3z.flowlayout.FlowLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выберите категории (не более 5)"
            android:textColor="@color/black"
            android:textSize="16dp"/>

        <com.nex3z.flowlayout.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flChildSpacing="auto"
            app:flChildSpacingForLastRow="align"
            app:flRowSpacing="8dp"
            android:id="@+id/flow_layout"
            app:flMinChildSpacing="6dp">
        </com.nex3z.flowlayout.FlowLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить"
            android:id="@+id/add"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:id="@+id/left_drawer"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:orientation="vertical"
        android:background="#deecfa">

        <LinearLayout
            android:background="@color/teal_700"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_person_24"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Арсений Кривецкий"
                    android:textColor="@color/white"
                    android:textSize="22dp"
                    android:id="@+id/user_name"/>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Поиск проектов"
            android:id="@+id/mainPage"
            android:background="@color/teal_700"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#012c42" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Мои проекты"
            android:id="@+id/my_projects"
            android:background="@color/teal_700"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#012c42" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Создать проект"
            android:id="@+id/new_project"
            android:background="@color/teal_700" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#012c42" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Чаты"
            android:id="@+id/chats"
            android:background="@color/teal_700"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#012c42" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Настройки"
            android:background="@color/teal_700"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#012c42" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="О приложении"
            android:id="@+id/about"
            android:background="@color/teal_700"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#012c42" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выход из аккаунта"
            android:id="@+id/exit"
            android:background="@color/teal_700"/>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>